(detector
    (extension adb)
    (extension ads))

(folding
    (start [\b(?i:(procedure|package|function|task|type|loop|declare)[^;]*$)\b])
    (stop [\b(?i:(end))\b]))

(shell-variables
    (TM_COMMENT_START --))

(comment.line --)

(indentation.decrease [\b(begin|end|else)\b])

(indentation.increase [\b(?i:(loop|declare|begin|exception|when|is|then|else|task)[^;]*$)\b])